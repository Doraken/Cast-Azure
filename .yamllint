---
# YAML Lint Configuration for Cast-Azure
# See https://yamllint.readthedocs.io/en/stable/configuration.html

extends: default

rules:
  # Line length
  line-length:
    max: 120
    level: warning

  # Indentation
  indentation:
    spaces: 2
    indent-sequences: true

  # Comments
  comments:
    min-spaces-from-content: 1

  # Truthy values
  truthy:
    allowed-values: [ 'true', 'false', 'yes', 'no' ]
    check-keys: false

  # Document start
  document-start:
    present: true

  # New lines
  new-line-at-end-of-file: enable
  new-lines:
    type: unix

  # Trailing spaces
  trailing-spaces: enable

  # Empty lines
  empty-lines:
    max: 2

  # Brackets
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1

  # Braces
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1

# Files to ignore
ignore: |
  .github/
  node_modules/
  .venv/
  venv/
